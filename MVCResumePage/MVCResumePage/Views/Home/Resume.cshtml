<body class="">

    <!-- Add your content of header -->
    <div class="background-color-layer" style="background-image: url('/images/@Model.ProfilePicUrl')"></div>
    <main class="content-wrapper">
        <header class="white-text-container section-container">
            <div class="text-center">
                <h1>@Model.Name</h1>
                <p>@Model.Email</p>
                <p>@Model.Occupation</p>
                <p>

                    @for(int i = 0; i < Model.Links.GetLength(0); i++)
                    {
                      <a class="fa-icon fa-icon-2x" href="@Model.Links[i,0]" target="_blank">
                        <i class="fa @Model.Links[i,1]"></i>
                    </a>  
                    }
                    

                   
                </p>
            </div>
        </header>



        <!-- Add your site or app content here -->

        <div class="container">
            <div class="row">
                <div class="col-xs-12">

                    <div class="card">
                        <div class="card-block">
                            <h2>About me</h2>
                            <div class="row">
                                <div class="col-md-4">
                                    <p><img src="/images/@Model.ProfilePicUrl" class="img-responsive" alt=""></p>
                                </div>
                                <div class="col-md-8">

                                    <p>@Model.Description[0]</p>
                                    <div>
                                        <p>@Model.Description[1]</p>
                                        <ul>
                                            <li>@Model.Description[2]</li>
                                            <li>@Model.Description[3]</li>

                                        </ul>
                                    </div>







                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-block">
                            <h2>Projects</h2>
                            <div class="row">

                                @for (int i = 0; i < Model.PortofolioUrl.GetLength(0); i++)
                                {
                                    <div class="col-md-4">
                                        <img src="/images/@Model.PortofolioUrl[i,0]" class="img-responsive" alt="">
                                        <h3 class="h5">@Model.PortofolioUrl[i,1]</h3>
                                        <p>@Model.PortofolioUrl[i,2]</p>
                                    </div>
                                }






                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-block">
                            <h2>Work</h2>

                            @foreach (var i in Model.Work)
                            {
                                <div class="work-experience">
                                    <small class="date">@i.Duration months</small>
                                    <h3 class="h5 date-title"><a href="@i.Url" title="">@i.WorkName - @i.Location</a></h3>

                                    <p>@i.Description</p>
                                </div>
                            }



                        </div>
                    </div>


                    <div class="card">
                        <div class="card-block">
                            <h2>Education</h2>
                            <div class="row">



                                @foreach (var i in Model.Education)
                                {
                                    <div class="col-md-4">
                                        <div class="education-experience">
                                            <small class="date">@i.StartYear - @i.EndYear</small>
                                            <h3 class="h5 date-title">@i.EducationName</h3>
                                            <p>@i.InstitutionName</p>
                                        </div>
                                    </div>
                                }




                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-block">
                            <h2>Skills</h2>
                            <div class="row">

                                @for(int i = 0; i < Model.Skill.GetLength(0); i++)
                                {
                                    <div class="col-md-4">
                                    <div class="language-experience">
                                        <h3 class="h5">@Model.Skill[i,0] <small>@Model.Skill[i,1]</small></h3>
                                    </div>
                                </div> 
                                }
                               
                                
                                
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-block">
                            <h2>Projects</h2>
                            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">


                                <!-- Wrapper for slides -->
                                <div class="carousel-inner" role="listbox">

                                    @for (int i = 0; i < Model.PortofolioPicUrl.GetLength(0); i++)
                                    {
                                       

                                    


                                        <div class="item @(i!=0?string.Empty:"active") ">

                                            <img src="/images/@Model.PortofolioPicUrl[i,0]" class="img-responsive" alt="...">
                                            <div class="carousel-caption">
                                                <h3 class="h5">@Model.PortofolioPicUrl[i,1]</h3>
                                                <p>@Model.PortofolioPicUrl[i,2]</p>
                                            </div>
                                            </div>
                                        

                                    }




                                </div>

                                <!-- Indicators -->
                                <ol class="carousel-indicators">

                                    @for (int i = 0; i < Model.PortofolioPicUrl.GetLength(0); i++)
                                    {
                                      if (i == 0)
                                        {
                             <li data-target="#carousel-example-generic" data-slide-to="@i"  class="item @(i!=0?string.Empty:"active")"></li>

                                            
                                        }else{
                                                                    <li data-target="#carousel-example-generic" data-slide-to="@i"  class="item "></li>


                                        }


                                 

                                        
                                    }

                                </ol>

                            </div>
                        </div>
                    </div>

